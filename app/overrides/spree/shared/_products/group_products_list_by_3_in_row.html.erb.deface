<!-- replace 'ul#products' -->
<ul id="products" class="inline product-listing" data-hook>
  <% if products.respond_to? :results %>
    <% products.results.in_groups_of(3, false).each do |product_row| %>
    <li class="product-row">
      <ul>
        <% product_row.each do |product| %>
          <li id="product_<%= product.id %>" class="columns three <%= cycle("alpha", "secondary", "omega secondary", :name => "classes") %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
            <div class="product-image" style="position:relative;">
              <%= link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url' %>
              <% if product.property('sale') == 'true' %>
                <div class="product-on-sale">sale</div>
              <%end%>
              <% if not product.list_price.nil? %>
                <div class="product-list-price"> <%= -((1 - product.price / product.list_price.to_f)*100).round  %>%  </div>
              <%end%>
            </div>
            <%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %>
            <span class="price-list" ><%= product.list_price %> <%= product.display_price %></span>
            <span class="price selling" itemprop="price"><%= product.price_in(current_currency).display_price %></span>
          </li>
        <% end %>
      </ul>
    </li> 
  <% end %>
  <% else %>
    <% products.in_groups_of(3, false).each do |product_row| %>
      <li class="product-row">
        <ul>
          <% product_row.each do |product| %>
            <li id="product_<%= product.id %>" class="columns three <%= cycle("alpha", "secondary", "omega secondary", :name => "classes") %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
              <div class="product-image" style="position:relative;">
                <%= link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url' %>
                <% if product.property('sale') == 'true' %>
                  <div class="product-on-sale">sale</div>
                <%end%>
                <% if not product.list_price.nil? %>
                  <div class="product-list-price"> <%= -((1 - product.price / product.list_price.to_f)*100).round  %>% </div>
                <%end%>
              </div>
              <%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %>
              <span class="price-list" ><%= product.list_price %> </span>
              <span class="price selling" itemprop="price"><%= product.price_in(current_currency).display_price %></span>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  <%end%>
  <% reset_cycle("classes") %>
</ul>